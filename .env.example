# API Configuration
REACT_APP_API_ENDPOINT=https://api.example.com

# Analytics
REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Feature Flags
REACT_APP_ENABLE_CLOUD_SYNC=false
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_AB_TESTING=false

# Firebase (Option A)
REACT_APP_FIREBASE_API_KEY=
REACT_APP_FIREBASE_AUTH_DOMAIN=
REACT_APP_FIREBASE_PROJECT_ID=
REACT_APP_FIREBASE_STORAGE_BUCKET=
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=
REACT_APP_FIREBASE_APP_ID=
REACT_APP_FIREBASE_MEASUREMENT_ID=
REACT_APP_FIREBASE_FUNCTIONS_REGION=us-central1

# Performance
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_LAZY_LOAD_ASSETS=true

# Security
REACT_APP_ENABLE_ENCRYPTION=true
REACT_APP_RATE_LIMIT_ENABLED=true
REACT_APP_SECURITY_KEY=change-me-in-production
REACT_APP_REQUEST_SIGNING_KEY=change-me-in-production
REACT_APP_SPIN_RATE_LIMIT_PER_MINUTE=60
REACT_APP_MAX_LOCAL_COIN_DELTA=100000
